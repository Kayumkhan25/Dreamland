<% layout("layouts/boilerPlate")%>

    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="pg-heading">Edit your listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="type" id="title" value="<%=listing.title %>" class="form-control" required/>
                    <div class="invalid-feedback">Please provide a title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="type" id="description" class="form-control" required><%=listing.description %></textarea>
                    <div class="invalid-feedback">Describe about location</div>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image</label>
                    <input name="listing[image]" type="type" id="img" value="<%=listing.image %>" class="form-control" required/>
                    <div class="invalid-feedback">Portrait url is missing</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" id="price" value="<%=listing.price %>" class="form-control" required/>
                        <div class="invalid-feedback">Enter valid amount</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" id="country" value="<%=listing.country %>" class="form-control" required/>
                        <div class="invalid-feedback">Provide the country name</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" id="location" value="<%=listing.location %>" class="form-control" required/>
                    <div class="invalid-feedback">Provide the location</div>
                </div>
                <button class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>