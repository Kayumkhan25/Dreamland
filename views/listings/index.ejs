<% layout("/layouts/boilerPlate") %>

    <h3 class="pg-heading">All listing</h3>
    <!-- <form method="GET" action="/listings/new">
            <button>create new listing</button>
        </form> -->

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for (let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card" style="width: 20rem;">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem;" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <b><%=listing.title %></b>
                        </h5>
                        <h6>
                            <%=listing.location %>,
                                <%=listing.country %>
                        </h6>
                        &#8377
                        <%= listing.price.toLocaleString("en-IN") %> / Day
                            <p class="card-text">
                                <%=listing.description %>
                            </p>
                    </div>
                </div>
            </a>

            <% } %>
    </div>